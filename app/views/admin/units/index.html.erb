<main class="main" id="top">
  <section class="page-header py-3">
    <div class="container">
      <div class="row">
        <div class="col">
          <!-- Page pre-title -->
          <div class="fs-8 fw-bold text-muted">Overview</div>
          <h2 class="fs-7 fw-bold">Property Units</h2>
        </div>
        <!-- Page title actions -->
        <div class="col-12 col-md-auto ms-auto d-flex align-items-center">
          <div class="btn-list">
            <%= link_to 'Add Unit', new_admin_unit_path, class: 'btn btn-sm btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <seaction>
    <div class="container">
      <div class="row mb-3">
        <div class="col">
          <div class="card">
            
            <div class="card-header bg-white shadow-sm">
              <h3 class="card-title fs-6 text-muted my-2">Unit List</h3>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <div id="properties">
                  <table class="table table-striped table-hover fs-8 align-middle">
                    <thead>
                      <tr>
                        <th class="d-none d-md-block">ID. No.</th>
                        <th>name</th>
                        <th class="d-none d-md-block">Property</th>
                        <th>Status</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @units.each do |unit| %>
                      <tr>
                        <td class="d-none d-md-block">
                          <span class="text-muted">
                            UID-<%= unit.property.name.split.map{|i| i[0,1].upcase}.join %>-<%= unit.present? ? "%.3i"%(unit.id) : "%.3i"%(1) %>
                          </span>
                        </td>
                        <td><%= unit.name %></td>
                        <td class="d-none d-md-block"><%= unit.property.name %></td>
                        <td>
                          <% if unit.status == 'occupied' %>
                            <span class="badge bg-success">Occupied</span>
                          <% else %>
                            <span class="badge bg-danger">Vacent</span>
                          <% end %>
                        </td>
                        <td class="text-end">
                          <%= link_to '', class: 'badge text-primary', 'data-bs-boundary': "viewport", 'data-bs-toggle': 'dropdown' do %>
                            <i class="fa-solid fa-ellipsis-vertical"></i>
                          <% end %>
                          <div class="dropdown-menu dropdown-menu-end fs-8">
                            <%= link_to 'Details', admin_unit_path(unit), class: 'dropdown-item' %>
                            <%= link_to 'Edit', edit_admin_unit_path(unit), class: 'dropdown-item' %>
                          </div>
                        </td>
                      </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

            <div class="card-footer d-flex align-items-center justify-content-between">
              <p class="m-0 text-muted fs-8">Showing <span>1</span> to <span>5</span> of <span>5</span> entries</p>
              <%== pagy_bootstrap_nav(@pagy) %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </seaction>
</main>