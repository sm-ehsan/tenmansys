<div id="<%= dom_id expense %>">
  <p>
    <strong>Paymentdate:</strong>
    <%= expense.paymentdate %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= expense.name %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= number_to_currency(expense.amount, unit: 'BDT. ') %>
  </p>

  <p>
    <strong>Note:</strong>
    <%= expense.note %>
  </p>

  <p>
    <strong>Tenant:</strong>
    <%= expense.tenant ? expense.tenant.name : '' %>
  </p>

  <p>
    <strong>Unit:</strong>
    <%= expense.unit ? expense.unit.name : '' %>
  </p>

  <p>
    <strong>Property:</strong>
    <%= expense.property ? expense.property.name : '' %>
  </p>

</div>
