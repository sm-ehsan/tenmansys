<main class="main" id="top">
  <section class="page-header py-3">
    <div class="container">
      <div class="row">
        <div class="col">
          <!-- Page pre-title -->
          <div class="fs-8 fw-bold text-muted">Overview</div>
          <h2 class="fs-7 fw-bold">Property</h2>
        </div>
        <!-- Page title actions -->
        <div class="col-12 col-md-auto ms-auto d-flex align-items-center">
          <div class="btn-list">
            <%= link_to 'Add Property', new_admin_property_path, class: 'btn btn-sm btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <seaction>
    <div class="container">
      <div class="row mb-3">
        <div class="col">
          <div class="card">
            
            <div class="card-header bg-white shadow-sm">
              <h3 class="card-title fs-6 text-muted my-2">Property List</h3>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <div id="properties">
                  <table class="table table-striped table-hover fs-8 align-middle">
                    <thead>
                      <tr>
                        <th class="w-1">ID. No.</th>
                        <th>Property</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Contact</th>
                        <th>Landlord</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @properties.each do |property| %>
                      <tr>
                        <td>
                          <span class="text-muted"><%= property.id %></span>
                        </td>
                        <td><%= property.name %></td>
                        <td><%= property.addrline1 %></td>
                        <td><%= property.city %></td>
                        <td><%= property.contactno %></td>
                        <td>
                          <%= property.landlord %>
                        </td>
                        <td class="text-end">
                          <%= link_to '', class: 'badge text-primary', 'data-bs-boundary': "viewport", 'data-bs-toggle': 'dropdown' do %>
                            <i class="fa-solid fa-ellipsis-vertical"></i>
                          <% end %>
                          <div class="dropdown-menu dropdown-menu-end fs-8">
                            <%= link_to 'Details', admin_property_path(property), class: 'dropdown-item' %>
                            <%= link_to 'Edit', edit_admin_property_path(property), class: 'dropdown-item' %>
                          </div>
                        </td>
                      </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </seaction>
</main>