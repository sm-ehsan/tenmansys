<main class="main" id="top">
  <%= render 'shared/backend/page_header' %>

  <seaction>
    <div class="container">
      <div class="row mb-3">
        <div class="col">
          <div class="card">

            <div class="card-header bg-white shadow-sm">
              <h3 class="card-title fs-6 text-muted my-2">Tenant List</h3>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <div id="properties">
                  <table class="table table-striped table-hover fs-8 align-middle">
                    <thead>
                      <tr>
                        <th class="w-1">ID. No.</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>mobile</th>
                        <th>Unit</th>
                        <th>entrydate</th>
                        <th>RPM</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @tenants.each do |tenant| %>
                      <tr>
                        <td>
                          <span class="text-muted">
                            TID-<%= tenant.property.name.split.map{|i| i[0,1].upcase}.join %>-<%= tenant.present? ? "%.3i"%(tenant.id) : "%.2i"%(1) %>
                          </span>
                        </td>
                        <td><%= tenant.name %></td>
                        <td><%= tenant.peraddrline1 %></td>
                        <td><%= tenant.mobile %></td>
                        <td><%= tenant.unit.name %></td>
                        <td><%= tenant.entrydate.present? ? tenant.entrydate.strftime('%b %d, %Y') : "" %></td>
                        <td><%= tenant.rentpermonth %></td>
                        <td>
                          <% if tenant.status == 'active' %>
                            <span class="badge bg-success">Active</span>
                          <% else %>
                            <span class="badge bg-danger">Close</span>
                          <% end %>
                        </td>
                        <td class="text-end">
                          <%= link_to '', class: 'badge text-primary', 'data-bs-boundary': "viewport", 'data-bs-toggle': 'dropdown' do %>
                            <i class="fa-solid fa-ellipsis-vertical"></i>
                          <% end %>
                          <div class="dropdown-menu dropdown-menu-end fs-8">
                            <%= link_to 'Details', admin_tenant_path(tenant), class: 'dropdown-item' %>
                            <%= link_to 'Edit', edit_admin_tenant_path(tenant), class: 'dropdown-item' %>
                          </div>
                        </td>
                      </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

            <div class="card-footer d-flex align-items-center justify-content-between">
              <p class="m-0 text-muted fs-8">Showing <span>1</span> to <span>10</span> of <span><%= @tenants.count %></span> entries</p>
              <%== pagy_bootstrap_nav(@pagy) %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </seaction>
</main>
