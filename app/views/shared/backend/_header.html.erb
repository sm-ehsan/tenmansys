<header>
	<div class="top_header border-bottom bg-white">
		<div class="container">
			<div class="d-flex flex-wrap align-items-center justify-content-between justify-content-lg-start py-2">
				<button class="navbar-toggler p-0 d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
					<i class="fa-solid fa-bars"></i>
				</button>

				<%= link_to admin_path, class: 'd-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none' do %>
					<%= image_tag "logo-new.png", height: 31, alt: 'logo' %>
				<% end %>


				<div class="dropdown text-end ms-lg-auto">
					<a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
						<i class="fa-solid fa-user-tie text-primary"></i>
					</a>
					<ul class="dropdown-menu dropdown-menu-end text-small mt-1" aria-labelledby="dropdownUser1" style="">
						<li>
							<%= link_to 'Profile', edit_user_registration_path, class: 'dropdown-item' %>
						</li>
						<li><hr class="dropdown-divider"></li>
						<% if user_signed_in? %>
							<li>
								<%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
							</li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>

	<div class="main_header bg-white">
		<div class="container">
			<nav class="navbar navbar-expand-lg">
				<div class="container p-0">

					<div class="collapse navbar-collapse" id="navbarScroll">
						<ul class="navbar-nav me-auto my-2 my-lg-0" style="--bs-scroll-height: 100px;">
							<li class="nav-item">
								<%= link_to 'Home', admin_path, class: 'nav-link' %>
							</li>
							<li class="nav-item">
								<%= link_to 'Properties', admin_properties_path, class: 'nav-link' %>
							</li>
							<li class="nav-item">
								<%= link_to 'Units', admin_units_path, class: 'nav-link' %>
							</li>
							<li class="nav-item">
								<%= link_to 'Tenants', admin_tenants_path, class: 'nav-link' %>
							</li>
							<li class="nav-item">
								<%= link_to 'Rents', admin_rents_path, class: 'nav-link' %>
							</li>
							<li class="nav-item">
								<%= link_to 'Expenses', admin_expenses_path, class: 'nav-link' %>
							</li>
							<li class="nav-item">
								<%= link_to 'Report', nil, class: 'nav-link' %>
							</li>
							<li class="nav-item">
								<%= link_to 'Help & Support', '', class: 'nav-link' %>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Quick Links
								</a>
								<ul class="dropdown-menu">
									<li>
										<%= link_to 'Nesco', 'https://postpaid.nesco.gov.bd/', class: 'dropdown-item', target: '_blank' %>
									</li>
									<li>
										<%= link_to 'WASA', 'http://139.162.120.207/wasa_billing/public/customer/bill/portal', class: 'dropdown-item', target: '_blank' %>
									</li>
									<li>
										<%= link_to 'PGCL', 'https://rsm.pgcl.org.bd/PGCL_WEB/webview.action', class: 'dropdown-item', target: '_blank' %>
									</li>
								</ul>
							</li>
						</ul>
						<form class="d-flex" role="search">
							<input class="form-control form-control-sm me-2" type="search" placeholder="Search" aria-label="Search">
						</form>
					</div>
				</div>
			</nav>
		</div>
	</div>
</header>
