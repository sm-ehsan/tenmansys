<section class="form-signin w-100 m-auto text-center py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card card-body">
          <h2>Edit <%= resource_name.to_s.humanize %></h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-floating mb-3">
              <%= f.text_field :username, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'User Name' %>
              <%= f.label :username, class: 'form-label' %>
            </div>

            <div class="form-floating mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'User Name' %>
              <%= f.label :email, class: 'form-label' %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-floating mb-3">
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'User Name' %>
              <%= f.label :password, class: 'form-label' %> <i>(leave blank if you don't want to change it)</i><br />
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="form-floating mb-3">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'User Name' %>
              <%= f.label :password_confirmation, class: 'form-label' %>
            </div>

            <div class="form-floating mb-3">
              <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', placeholder: 'User Name' %>
              <%= f.label :current_password, class: 'form-label' %> <i>(we need your current password to confirm your changes)</i>
            </div>

            <div class="actions">
              <%= f.submit "Update", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card card-body bg-white">
          <h2 class="mb-3">Unhappy? </h2>
          <h3 class="mb-4">Cancel my account</h3>

          <div class="d-flex justify-content-center">
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger me-3' %>

            <%= link_to "Back", :back, class: 'btn btn-warning' %>
          </div>
        </div>
      </div>

      </div>
    </div>
  </div>
</div>
</section>